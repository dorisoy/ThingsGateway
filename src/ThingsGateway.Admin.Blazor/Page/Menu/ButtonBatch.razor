@using System.Linq.Expressions;
@using BlazorComponent;
@using Masa.Blazor.Presets;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.Extensions.DependencyInjection
@using ThingsGateway.Admin.Application;
@using ThingsGateway.Core.Extension

@namespace ThingsGateway.Admin.Blazor
@inherits BasePopupComponentBase
@inject UserResoures UserResoures
<PModal FormModel="ButtonAddInput" Persistent Title=@AppService.I18n.T("批量新增") Value="Visible" Width=1600 ValueChanged=@((a=>{if(!a)
        ClosePopupAsync();}))
         OnSave="OnSaveAsync">
     @if (Visible)
    {
        <MRow>

            <MCol Cols="12">

                <MTextField Dense Outlined HideDetails="@("auto")"
                             Style="max-width:300px"
                             Label=@(ButtonAddInput.Description(x => x.Title)) @bind-Value=@ButtonAddInput.Title />
             </MCol>
             <MCol Cols="12">
                 <MTextField Dense Outlined HideDetails="@("auto")"
                             Style="max-width:300px"
                             Label=@(ButtonAddInput.Description(x => x.Code)) @bind-Value=@ButtonAddInput.Code />
             </MCol>


         </MRow>
    }
</PModal>



