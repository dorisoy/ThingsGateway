@using System.Linq.Expressions;
@using BlazorComponent;
@using Masa.Blazor.Presets;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.Extensions.DependencyInjection
@using ThingsGateway.Admin.Application;
@using ThingsGateway.Core.Extension

@namespace ThingsGateway.Gateway.Blazor
@inherits BasePopupComponentBase

<PModal Persistent Title=@AppService.I18n.T("插件") Value="Visible" Width=1200 ValueChanged=@((a=>{if(!a)
        ClosePopupAsync();}))
         OnSave="OnSaveAsync" SaveText="@AppService.I18n.T("写入")">
     @if (Visible)
    {
        <MSubheader Class="pt-4 font-weight-black"> 写入值 </MSubheader>
        <MTextarea Class="pa-4" Dense Outlined HideDetails="@("auto")" @bind-Value=@Content />

    }
</PModal>


